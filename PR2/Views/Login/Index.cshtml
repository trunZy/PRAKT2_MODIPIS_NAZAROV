@model List<InputData>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container d-flex align-items-center justify-content-center" style="height: 100vh; background-color: #19e583;">
    <div class="border rounded p-4" style="background-color: #008c48; max-width: 400px; width: fit-content; padding: 20px;">
        <div class="text-center">
            <h1 class="display-4" style="color: #eb0cd4;">Авторизация</h1>
        </div>

        <form action="/Login/Index/" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group text-center">
                <label for="login" class="form-label h2" style="color: #eb0cd4;">Логин</label>
                <div class="d-flex justify-content-center">
                    <input name="login" class="form-control form-control-lg" id="login" style="max-width: 200px" />
                </div>
            </div>
            <div class="form-group text-center">
                <label for="password" class="form-label h2" style="color: #eb0cd4;">Пароль</label>
                <div class="d-flex justify-content-center">
                    <input name="password" type="password" class="form-control form-control-lg" id="password" style="max-width: 200px" />
                </div>
            </div>

            <br />
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg" style="background-color: #eb0cd4; border-color: #eb0cd4;">Войти</button>
            </div>
        </form>
    </div>
</div>





